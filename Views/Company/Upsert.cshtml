@model Company
@using TobaccoWebShop.Enums

<div class="d-flex justify-content-center mb-4">
    <div class="card border-0 mt-4 w-50 create-product-card h-50">
        <div class="card-header m-lg-0 py-3 create-product-card-header">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">
                        @(Model.Id != 0 ? "Edit" : "Add") Company
                    </h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Id" hidden />
                <div class="p-3">
                    <div class="py-2 col-12 mt-2 mb-2">
                        <label asp-for="Name" class="ms-2 text-start w-100 mb-2"></label>
                        <input asp-for="Name" class="form-control border-0 shadow input-height" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12 mt-2 mb-2">
                        <label asp-for="StreetAddress" class="ms-2 text-start w-100 mb-2"></label>
                        <input asp-for="StreetAddress" class="form-control border-0 shadow input-height" />
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12 mt-2 mb-2">
                        <label asp-for="City" class="p-0 text-start mb-2 w-100"></label>
                        <input asp-for="City" class="form-control border-0 shadow input-height" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12 mt-2 mb-2">
                        <label asp-for="State" class="p-0 text-start w-100 mb-2"></label>
                        <input asp-for="State" class="form-control border-0 shadow input-height" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12 mt-2 mb-2">
                        <label asp-for="PostalCode" class="p-0 text-start w-100 mb-2"></label>
                        <input asp-for="PostalCode" class="form-control border-0 shadow input-height" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12 mt-2 mb-2">
                        <label asp-for="PhoneNumber" class="p-0 text-start w-100 mb-2"></label>
                        <input asp-for="PhoneNumber" class="form-control border-0 shadow input-height" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            @if (Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Edit</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Admin" asp-action="CompaniesIndex" class="btn btn-outline-primary border form-control">
                                Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>